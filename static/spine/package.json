{
  "name": "spine",
  "version": "1.0.0",
  "description": "The spine-ts runtime provides functionality to load and manipulate [Spine](http://esotericsoftware.com) skeletal animation data using TypeScript and JavaScript. spine-ts is split\r up into multiple modules:",
  "scripts": {
    "build": "webpack",
    "watch": "npm-watch build"
  },
  "private": true,
  "dependencies": {
    "gif.js": "^0.2.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx,html,css",
      "delay": 2500,
      "runOnChangeOnly": false
    }
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.1",
    "npm-watch": "^0.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
