{
	"compilerOptions": {
		"module": "es6",
		"target": "ES2022",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"sourceMap": true,
		"declaration": false
	},
	"include": [
		"src/core/**/*",
		"src/webgl/**/*",
		"src/player/**/*",
		"src/stym/**/*",
		"src/*",
	],
	"exclude": [
		"build",
		"dist"
	]
}